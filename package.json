{
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=14.16"
	},
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "xo && astro build",
		"preview": "astro preview",
		"test": "xo && astro build"
	},
	"devDependencies": {
		"@astrojs/image": "^0.16.1",
		"@astrojs/rss": "^2.3.1",
		"@astrojs/sitemap": "^1.2.1",
		"@astrojs/tailwind": "^3.1.1",
		"@astrolib/seo": "^0.3.0",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.9",
		"@typescript-eslint/parser": "^5.57.0",
		"astro": "^2.1.8",
		"astro-iconify": "^1.2.0",
		"eslint-plugin-astro": "^0.26.1",
		"limax": "^v3.0.0",
		"reading-time": "^1.5.0",
		"remark-custom-heading-id": "^1.0.0",
		"tailwindcss": "^3.3.0",
		"typescript": "^4.9.5",
		"xo": "^0.53.1"
	},
	"xo": {
		"envs": [
			"es2021",
			"node",
			"browser"
		],
		"globals": [
			"Astro",
			"Fragment"
		],
		"extensions": [
			"astro"
		],
		"ignores": [
			"source/content/config.ts"
		],
		"overrides": [
			{
				"files": [
					"**/*.astro"
				],
				"parser": "astro-eslint-parser",
				"parserOptions": {
					"parser": "@typescript-eslint/parser"
				},
				"extraFileExtensions": [
					".astro"
				]
			}
		],
		"rules": {
			"unicorn/filename-case": "off",
			"unicorn/text-encoding-identifier-case": "off",
			"n/file-extension-in-import": "off",
			"operator-linebreak": "off",
			"jsx-quotes": [
				"error",
				"prefer-double"
			]
		}
	}
}
